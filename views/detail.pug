extends layout

block content
    .container
      .jumbotron(style='margin-top: 100px; background-color: #fff; border: 1px solid #2C7873;')
        .container
            .col-lg-5.col-xs-5.item-photo
                img(src= product.image)         
            .col-lg-7.col-xs-7(style='border:0px solid gray')
                h3= product.product_name        
                h6.title-price 
                    small Price
                    h3(style='margin-top:0px;')= product.price           
                .section(style='padding-bottom:20px;')
                    h6.title-attr Quantity Available: 
                        span= product.qty_on_hand                            
                .section
                    button.btn.btn-aqua
                        i.fa.fa-shopping-cart(aria-hidden='true') Add to Cart
            .col-lg-12
                    h6 Product Details         
                        div(style='width:100%;border-top:1px solid #6FB98F')
                            p(style='padding:15px;')= product.product_description
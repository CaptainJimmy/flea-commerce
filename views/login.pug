extends layout

block content
    form.form-signin(method="post".action="/customer/authenticate")
        h2.form-signin-heading Please sign in       
        label.sr-only(for='inputEmail') Email address       
        input#inputEmail.form-control(type='email', placeholder='Email address', name="email",required='', autofocus='')       
        label.sr-only(for='inputPassword') Password       
        input#inputPassword.form-control(type='password',name='password',placeholder='Password', required='')      
        input#remember-me.checkbox(type='checkbox', value='remember-me') 
        label(for="remember-me") Remember me
        button.btn.btn-lg.btn-aqua.btn-block(type='submit') Sign in